<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/sources/*</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>customtags</taglib-uri>
			<taglib-location>/WEB-INF/tag/custom.tld</taglib-location>
		</taglib>
	</jsp-config>

	<error-page>
		<error-code>404</error-code>
		<location>/jsp/ErrorPage.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>500</error-code>
		<location>/jsp/ErrorPage.jsp</location>
	</error-page>
	
	<filter>
		<filter-name>TestFilter</filter-name>
		<filter-class>by.epam.jwd.yakovlev.airline.filter.TestFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>by.epam.jwd.yakovlev.airline.filter.SecurityFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>by.epam.jwd.yakovlev.airline.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
	
	<filter>
		<filter-name>MessageFilter</filter-name>
		<filter-class>by.epam.jwd.yakovlev.airline.filter.MessageFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>TestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>MessageFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
		 
</web-app>